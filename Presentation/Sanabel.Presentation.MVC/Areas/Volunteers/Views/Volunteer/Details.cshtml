@model Sanabel.Volunteers.Application.Models.VolunteerViewModel
@using BusinessSolutions.Localization
@using Sanabel.Volunteers.Application.Localization
@using BusinessSolutions.MVCCommon.Helpers;
@using BusinessSolutions.Common.Infra.Extensions

@{
    ViewBag.Title = Model.Name;
}

@Html.Partial("_TempDataHeaderMessages")
@Html.Partial("_ViewDataHeaderMessages")

<div class="form-group row">
    <label class="col-md-2 form-control-label text-left">@Html.DisplayNameFor(model => model.Name)</label>
    <div class="col-md-4">
        @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <label class="col-md-2 form-control-label text-left">@Html.DisplayNameFor(model => model.Email)</label>
    <div class="col-md-4">
        @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>
<div class="form-group row">
    <label class="col-md-2 form-control-label text-left">@Html.DisplayNameFor(model => model.CountryName)</label>
    <div class="col-md-4">
        @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <label class="col-md-2 form-control-label text-left">@Html.DisplayNameFor(model => model.RegionName)</label>
    <div class="col-md-4">
        @Html.DisplayFor(model => model.RegionName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>
<div class="form-group row">
    <label class="col-md-2 form-control-label text-left">@Html.DisplayNameFor(model => model.CityName)</label>
    <div class="col-md-4">
        @Html.DisplayFor(model => model.CityName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <label class="col-md-2 form-control-label text-left">@Html.DisplayNameFor(model => model.DistrictName)</label>
    <div class="col-md-4">
        @Html.DisplayFor(model => model.DistrictName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>
<div class="form-group row">
    <label class="col-md-2 form-control-label text-left">@Html.DisplayNameFor(model => model.Phone)</label>
    <div class="col-md-4">
        @Html.DisplayFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <label class="col-md-2 form-control-label text-left">@Html.DisplayNameFor(model => model.Gender)</label>
    <div class="col-md-4">
        @Model.Gender.GetLocalizedEnumDescription()
    </div>
</div>
<div class="form-group row">
    <label class="col-md-2 form-control-label text-left">@Html.DisplayNameFor(model => model.Address)</label>
    <div class="col-md-10">
        @Html.DisplayFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>
<div class="form-group row">
    <label class="col-md-2 form-control-label text-left">@Html.DisplayNameFor(model => model.HasCar)</label>
    <div class="col-md-4">
        @(Model.HasCar ? VolunteerResource.Yes : VolunteerResource.No)
    </div>
    <label class="col-md-2 form-control-label text-left"></label>
    <div class="col-md-4">
    </div>
</div>
<div class="form-group row">
    <label class="col-md-2 form-control-label text-left">@Html.DisplayNameFor(model => model.Notes)</label>
    <div class="col-md-10">
        @Html.DisplayFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
    </div>
</div>
<div class="form-group row">
    <label class="col-md-2 form-control-label text-left">&nbsp;</label>
    <div class="col-md-10">
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-sm btn-info"><i class="fa fa-pencil"></i> @CommonResources.Edit</a>
        <a href="@Url.Action("Index")" class="btn btn-sm btn-info"><i class="fa fa-arrow-circle-left"></i> @CommonResources.BackToIndex</a>
    </div>
</div>

