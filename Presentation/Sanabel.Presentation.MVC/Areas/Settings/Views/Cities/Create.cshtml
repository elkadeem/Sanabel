@model CommonSettings.ViewModels.CityViewModel
@using BusinessSolutions.Localization;
@{
    ViewBag.Title = "";
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body card-table">
                <div class="row">
                    <div class="col-sm-12">
                        <h4 class="card-title font-weight-bold"></h4><hr />
                    </div>
                </div>
                @Html.Partial("_TempDataHeaderMessages")
                @Html.Partial("_ViewDataHeaderMessages")
                @using (Html.BeginForm("Create", "Cities", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group row">
                        <label class="col-md-2 form-control-label text-left">@Html.DisplayNameFor(model => model.CountryId)</label>
                        <div class="col-md-4">
                            @Html.DropDownListFor(Model => Model.CountryId
                               , new SelectList(Enumerable.Empty<SelectListItem>())
                               , CommonResources.All
                               , new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "text-danger" })
                        </div>
                        <label class="col-md-2 form-control-label text-left">@Html.DisplayNameFor(model => model.RegionId)</label>
                        <div class="col-md-4">
                            @Html.DropDownListFor(Model => Model.RegionId
                               , new SelectList(Enumerable.Empty<SelectListItem>())
                               , CommonResources.All
                               , new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RegionId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2 form-control-label text-left">@Html.DisplayNameFor(model => model.CityName)</label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.CityName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CityName, "", new { @class = "text-danger" })
                        </div>
                        <label class="col-md-2 form-control-label text-left">@Html.DisplayNameFor(model => model.CityNameEn)</label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.CityNameEn, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CityNameEn, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2 form-control-label text-left">@Html.DisplayNameFor(model => model.CityCode)</label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.CityCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CityCode, "", new { @class = "text-danger" })
                        </div>
                        <label class="col-md-2 form-control-label text-left">&nbsp;</label>
                        <div class="col-md-4">
                            &nbsp;
                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-md-2 form-control-label text-left">&nbsp;</label>
                        <div class="col-md-10">
                            <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> @CommonResources.Save</button>
                            <button type="reset" class="btn btn-sm btn-danger"><i class="fa fa-eraser"></i> @CommonResources.Reset</button>
                            <a href="@Url.Action("Index")" class="btn btn-sm btn-info"><i class="fa fa-arrow-circle-left"></i> @CommonResources.BackToIndex</a>
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
    <script>
        $(function () {
            FillCities();
            $('#CountryId').change(function () {
                FillRegionsByCountryId($(this).val());
            });
        });

        function FillCities()
        {
            $.get("@Url.Action("GetAllCountries", "Countries")")
                .done(function (data) {
                    $('#CountryId:first-child ~ option').remove();
                    $.each(data, function (index, item) {

                        $('<option/>', {
                            'value': item.countryId,
                            text: item.countryName,
                        }).appendTo('#CountryId');
                    });

                    var countryId = @Model.CountryId;
                    $('#CountryId').val(countryId == 0 ? "" : countryId);
                    FillRegionsByCountryId(countryId);

                }).fail(function (error) {
                    console.log(error);
                }).always(function () {
                });

        }

        function FillRegionsByCountryId(countryId)
        {
            $.get("@Url.Action("GetRegionsByCountryId", "Regions")" + "?countryId=" + countryId)
                .done(function (data) {
                    $('#RegionId option:first-child ~ option').remove();
                    $.each(data, function (index, item) {
                        $('<option/>', {
                            'value': item.regionId,
                            text: item.regionName,
                        }).appendTo('#RegionId');

                        var regionId = @Model.RegionId;
                        if ($('#RegionId option[value="' + regionId + '"]').length > 0)
                            $('#RegionId').val(regionId);
                        else
                            $('#RegionId').val("");
                    });
                }).fail(function (error) {
                    console.log(error);
                }).always(function () {
                });
        }
    </script>
}
