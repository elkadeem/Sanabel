<!DOCTYPE html>

<html dir="rtl" lang="ar">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>

    <!-- Icons -->
    <link href="@Url.Content("~/Content/font-awesome/css/font-awesome.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/simple-line-icons/css/simple-line-icons.css")" rel="stylesheet">
    <link href="@Url.Content("~/fonts/fonts.css")" rel="stylesheet">
    <!-- Main styles for this application -->
    <link href="@Url.Content("~/Content/css/style.css")" rel="stylesheet">
    <!-- Styles required by this views -->
</head>
<body class="app flex-row align-items-center login-bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center"><img src="@Url.Content("~/content/img/logo.png")" class="img-responsive" style="max-width:150px;margin-bottom:20px;" /></div>
            <div class="col-md-8">
                <div class="card-group mb-0">
                    <div class="card p-4">
                        @RenderBody()
                    </div>
                    <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                        <div class="card-body text-center">
                            <div>
                                <img src="@Url.Content("~/content/img/login-icon.png")" class="img-responsive" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap and necessary plugins -->
    <script src="@Url.Content("~/scripts/jquery.min.js")"></script>
    <script src="@Url.Content("~/scripts/popper.min.js")"></script>
    <script src="@Url.Content("~/scripts/bootstrap.min.js")"></script>
    
    @RenderSection("scripts", required: false)
</body>
</html>
